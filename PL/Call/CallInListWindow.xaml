<Window x:Class="PL.Call.CallInListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Call"
        mc:Ignorable="d"
        Title="Call In List Window" Height="601" Width="997"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Icon="pack://application:,,,/PL;component/Images/Login.png"
        Loaded="Window_Loaded" Closed="Window_Closed">
    <!--External Grid-->


    <!-- External Grid -->
    <Grid Margin="20,32,32,26">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="440*"/>
            <ColumnDefinition Width="441*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="101" />
            <!-- Title Section -->
            <RowDefinition />
            <!-- ListView Section -->
            <RowDefinition Height="Auto" MinHeight="73" />
            <!-- Buttons Section -->
        </Grid.RowDefinitions>

        <!-- ListView Section -->
        <ListView Grid.Row="1" 
             ItemsSource="{Binding Path=CallList}"
                  SelectedItem="{Binding SelectedCall, Mode=TwoWay}"
                  MouseDoubleClick="lsvUpdate_MouseDoubleClick" 
                  BorderBrush="#FFEB0404" Background="#FFFDFDFD" 
                  Padding="10" Margin="0,31,-15,40" Grid.ColumnSpan="3" Grid.RowSpan="2" >
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Margin" Value="0,0,0,10" />
                    <Setter Property="Padding" Value="10" />
                    <Setter Property="Background" Value="#FFFAFAFA" />
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FFEFEFEF" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FFFFE0E0" />
                            <Setter Property="Foreground" Value="#FFEB0404" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.View>
                <GridView>
                    <GridViewColumn Header=" Call Id" Width="110" DisplayMemberBinding="{Binding CallId}" />
                    <GridViewColumn Header="Status" Width="130" DisplayMemberBinding="{Binding Status}" />
                    <GridViewColumn Header=" Total Assignments " Width="130" DisplayMemberBinding="{Binding TotalAssignment}" />
                    <GridViewColumn Header="Range Time To End" Width="180" DisplayMemberBinding="{Binding RangeTimeToEnd}" />
                    <GridViewColumn Header="Last Volunteer" Width="130" DisplayMemberBinding="{Binding NameLastVolunteer}" />
                    <GridViewColumn Header="Executed Time" Width="180" DisplayMemberBinding="{Binding ExecutedTime}" />
                    <GridViewColumn Header="" Width="220">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Delete" Click="btnDelete_Click"
                                            Background="Red" Foreground="White" FontWeight="Bold"
                                             Width="100" Height="30" Margin="5,0" Tag="{Binding CallId}" />

                                    <Button Content="Cancel" Click="btnCancel_Click"   Background="Red" Foreground="White"  FontWeight="Bold" Width="100" Height="30" Tag="{Binding CallId}" />
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Buttons Section -->
        <StackPanel Grid.Row="2"  HorizontalAlignment="Center" Margin="0,40,0,-17" Width="170" Grid.ColumnSpan="2">
            <Button Content="Add" Click="btnAdd_Click"
                    Background="#FFEB0404" Foreground="White" FontWeight="Bold"
                    Width="130" Height="42"/>
        </StackPanel>
        <Label Content="Select Filter:" HorizontalAlignment="Left" Margin="120,70,0,0" VerticalAlignment="Top" Foreground="#FFEB0404" Height="28" Width="75" RenderTransformOrigin="0.5,0.5" Grid.Column="1" />

        <ComboBox ItemsSource="{Binding Source={StaticResource StatusCallCollectionKey}}"
                  SelectedValue="{Binding Path=Filter, Mode=TwoWay}"  SelectionChanged="FilteredCall_SelectionChanged" HorizontalAlignment="Left"
                  Width="220" Margin="200,67,0,0" Grid.Column="1" 
                  Height="29" VerticalAlignment="Top" />
        <Label Content="Sort by:" HorizontalAlignment="Left" Margin="27,70,0,0" VerticalAlignment="Top" Grid.Column="0" Foreground="#FFEB0404" Height="28" Width="58"/>
        <ComboBox ItemsSource="{Binding Source={StaticResource CallInListFieldCollectionKey}}"
           SelectedValue="{Binding Path=Sort, Mode=TwoWay}"  SelectionChanged="FilteredCall_SelectionChanged" HorizontalAlignment="Left"
                  Width="220" Margin="80,67,0,0" 
                  Height="29" Grid.Column="0" VerticalAlignment="Top" />
        <TextBlock HorizontalAlignment="Left" Margin="316,8,0,0" TextWrapping="Wrap" Text="Call Management Dashboard" VerticalAlignment="Top" Height="36" Width="402"  FontSize="24" FontWeight="Bold" Foreground="#FFEB0404" Grid.ColumnSpan="2" RenderTransformOrigin="0.495,0.543"/>
    </Grid>
</Window>
