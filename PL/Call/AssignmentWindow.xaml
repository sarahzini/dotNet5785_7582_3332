<Window x:Class="PL.Call.AssignmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Assignment Window" Height="700" Width="900"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Icon="pack://application:,,,/PL;component/Images/Login.png"
        Loaded="Window_Loaded" Closed="Window_Closed">
    <!--External Grid-->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Title Section-->
        <TextBlock Text="Choose the call closest to you to respond quickly!" 
                   FontSize="24" FontWeight="Bold" Foreground="#FFB22222"
                   HorizontalAlignment="Left" Margin="-6,4,0,16" Width="403" />
        <Label Content="Filter:" HorizontalAlignment="Left" Margin="594,18,0,0" VerticalAlignment="Top"/>
        <ComboBox ItemsSource="{Binding Source={StaticResource StatusCallCollectionKey}}"
                  SelectedValue="{Binding Path=Ambulance, Mode=TwoWay}" Margin="649,14,69,592"
                  SelectionChanged="FilteredCall_SelectionChanged" Grid.RowSpan="2" />

        <Label Content="Sort By:" HorizontalAlignment="Left" Margin="356,24,0,0" VerticalAlignment="Top"/>
        <ComboBox ItemsSource="{Binding Source={StaticResource OpenCallFieldCollectionKey}}"
                  SelectionChanged="SortedCall_SelectionChanged"
                  SelectedValue="{Binding Path=Field, Mode=TwoWay}" HorizontalAlignment="Left" Margin="412,0,0,0" VerticalAlignment="Center" Width="123" Height="32" RenderTransformOrigin="0.463,0.612" />

        <!--ListView Section-->
        <ListView Grid.Row="1" ItemsSource="{Binding Path=OpenCallList}" SelectedItem="{Binding SelectedCall, Mode=TwoWay}"
                  BorderBrush="#FFB22222" Background="#FFFDFDFD" Margin="0,0,0,0"
                  Padding="10">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Margin" Value="0,0,0,10"/>
                    <Setter Property="Padding" Value="10"/>
                    <Setter Property="Background" Value="#FFFAFAFA"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FFEFEFEF"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#FFFFE0E0"/>
                            <Setter Property="Foreground" Value="#FFB22222"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Call ID" Width="80" DisplayMemberBinding="{Binding CallId}" />
                    <GridViewColumn Header="Emergency" Width="90" DisplayMemberBinding="{Binding TypeOfCall}" />
                    <GridViewColumn Header="Address" Width="200" DisplayMemberBinding="{Binding CallAddress}" />
                    <GridViewColumn Header="Begin Time" Width="200" DisplayMemberBinding="{Binding BeginTime}" />
                    <GridViewColumn Header="Max End Time" Width="200" DisplayMemberBinding="{Binding MaxEndTime}" />
                    <GridViewColumn Header="Distance from your position" Width="100" DisplayMemberBinding="{Binding VolunteerDistanceToCall}" />
                    <GridViewColumn Header="" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Assign to this Call" Click="btnChoose_Click"  CommandParameter="{Binding}" 
                                            Background="#FF28A745" Foreground="White" FontWeight="Bold"
                                            Width="180" Height="30" Margin="5,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Canvas Margin="0,0,0,3"/>
    </Grid>
</Window>
