<Window x:Class="PL.Call.CurrentCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Call"
        mc:Ignorable="d"
        Title="CurrentCallWindow" Height="400" Width="584"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}" 
        Icon="pack://application:,,,/PL;component/Images/Login.png">
    <!--External Grid-->
    <Grid Height="400" VerticalAlignment="Top" Margin="0,0,155,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="AssignId:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding Path=CurrentCall.AssignId, Mode=OneWay}" 
         IsReadOnly="True" VerticalAlignment="Center" Width="200"/>

        <Label Grid.Row="1" Grid.Column="0" Content="CallId:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding Path=CurrentCall.CallId, Mode=OneWay}" 
         IsReadOnly="True" VerticalAlignment="Center" Width="200"/>

        <Label Grid.Row="2" Grid.Column="0" Content="TypeOfCall:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding Path=CurrentCall.TypeOfCall, Mode=OneWay}" 
         IsReadOnly="True" VerticalAlignment="Center" Width="200"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Description:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding Path=CurrentCall.Description, Mode=OneWay}" 
         IsReadOnly="True" VerticalAlignment="Center" Width="200"/>

        <Label Grid.Row="4" Grid.Column="0" Content="CallAddress:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding Path=CurrentCall.CallAddress, Mode=OneWay}" 
         IsReadOnly="True" VerticalAlignment="Center" Width="200"/>

        <Label Grid.Row="5" Grid.Column="0" Content="BeginTime:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding Path=CurrentCall.BeginTime, Mode=OneWay}" 
         IsReadOnly="True" VerticalAlignment="Center" Width="200"/>

        <Label Grid.Row="6" Grid.Column="0" Content="MaxEndTime:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding Path=CurrentCall.MaxEndTime, Mode=OneWay}" 
         IsReadOnly="True" VerticalAlignment="Center" Width="200"/>

        <Label Grid.Row="7" Grid.Column="0" Content="BeginActionTime:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="7" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding Path=CurrentCall.BeginActionTime, Mode=OneWay}" 
         IsReadOnly="True" VerticalAlignment="Center" Width="200"/>

        <Label Grid.Row="8" Grid.Column="0" Content="VolunteerDistanceToCall:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="8" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding Path=CurrentCall.VolunteerDistanceToCall, Mode=OneWay}" 
         IsReadOnly="True" VerticalAlignment="Center" Width="200"/>

        <Label Grid.Row="9" Grid.Column="0" Content="Status:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="9" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding Path=CurrentCall.Status, Mode=OneWay}" 
         IsReadOnly="True" VerticalAlignment="Center" Width="200"/>

        <Button Grid.Column="1" Content="Cancel Assignment" Click="btnCancel_Click" HorizontalAlignment="Left" Margin="10,53,0,0" Grid.Row="9" VerticalAlignment="Top"/>
        <Button Grid.Column="1" Content="End Assignment" Click="btnFinish_Click" HorizontalAlignment="Left" Margin="138,53,0,0" Grid.Row="9" Height="20" VerticalAlignment="Top"/>

    </Grid>
</Window>
