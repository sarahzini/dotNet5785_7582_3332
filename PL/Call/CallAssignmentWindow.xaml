<Window x:Class="PL.Call.CallAssignmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Call"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Icon="pack://application:,,,/PL;component/Images/Login.png"
        Title="CallAssignmentWindow" Height="450" Width="800">
    <!--External Grid-->
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid/>


        <ListView Grid.Row="1" ItemsSource="{Binding Path=CallAssign}"
                  Height="NaN" BorderBrush="#FFEB0404" Background="#FFEEEBEB" >
                <ListView.Foreground>
                    <SolidColorBrush Color="#FFEB0404"/>
                </ListView.Foreground>
                <ListView.View>
                    <GridView>
                    <GridViewColumn Header="Volunteer Id" Width="Auto" DisplayMemberBinding="{Binding VolunteerId}" />
                        <GridViewColumn Header="Volunteer Name"  Width="Auto" DisplayMemberBinding="{Binding VolunteerName}" />
                        <GridViewColumn Header="Begin Assignment Time" Width="Auto" DisplayMemberBinding="{Binding BeginActionTime}" />
                        <GridViewColumn Header="End Assignment Time" Width="Auto" DisplayMemberBinding="{Binding EndActionTime}" />
                        <GridViewColumn Header="Closure Type" Width="Auto" DisplayMemberBinding="{Binding ClosureType}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Window>

