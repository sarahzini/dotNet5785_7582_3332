<Window x:Class="PL.Call.CallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Call"
        mc:Ignorable="d"
        Title="Call Window" Height="450" Width="800"
        Icon="pack://application:,,,/PL;component/Images/Login.png">
    <Grid>
        <StackPanel>
            <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="45,45,45,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Id:" HorizontalAlignment="Left" Margin="2" VerticalAlignment="Center" />
                <TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Height="NaN" Margin="2" 
                         Text="{Binding CurrentCall.Id, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                         IsReadOnly="{Binding ButtonText, Converter={StaticResource ConvertUpdateToTrueKey}}"
                         VerticalAlignment="Center" Width="120"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Address:" HorizontalAlignment="Left" Margin="2" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Height="NaN" Margin="2" 
                         Text="{Binding CurrentCall.Address, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                         VerticalAlignment="Center" Width="120"/>

                <Label Grid.Row="4" Grid.Column="0" Content="Open time:" HorizontalAlignment="Left" Margin="2" VerticalAlignment="Center"/>
                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal">
                    <DatePicker x:Name="BeginDatePicker" IsEnabled="false" HorizontalAlignment="Left" Height="NaN" Margin="2" 
                                SelectedDate="{Binding CurrentCall.BeginTime, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                                VerticalAlignment="Center" Width="120"/>
                    <TextBox x:Name="BeginTimeTextBox" IsEnabled="false" HorizontalAlignment="Left" Height="NaN" Margin="2" 
                             Text="{Binding CurrentCall.BeginTime, Mode=TwoWay, StringFormat='{}{0:HH:mm:ss}', NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                             VerticalAlignment="Center" Width="80"/>
                </StackPanel>

                <Label Grid.Row="5" Grid.Column="0" Content="Max time to end the call:" 
                       Visibility="{Binding ButtonText}" 
                       HorizontalAlignment="Left" Margin="2" VerticalAlignment="Center"/>
                <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Visibility="{Binding ButtonText}">
                    <DatePicker x:Name="MaxEndDatePicker" IsEnabled="true" HorizontalAlignment="Left" Height="NaN" Margin="2" 
                                SelectedDate="{Binding CurrentCall.MaxEndTime, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                                VerticalAlignment="Center" Width="120"/>
                    <TextBox x:Name="MaxEndTimeTextBox" IsEnabled="true" HorizontalAlignment="Left" Height="NaN" Margin="2" 
                             Text="{Binding CurrentCall.MaxEndTime, Mode=TwoWay, StringFormat='{}{0:HH:mm:ss}', NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                             VerticalAlignment="Center" Width="80"/>
                </StackPanel>

                <Label Grid.Row="6" Grid.Column="0" Content="Status:" 
                       Visibility="{Binding ButtonText}" 
                       HorizontalAlignment="Left" Margin="2" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="6" Grid.Column="1" 
                          Visibility="{Binding ButtonText}" IsEnabled="False"
                          IsReadOnly="True"
                          HorizontalAlignment="Left" Height="NaN" Margin="2" 
                          ItemsSource="{Binding Source={StaticResource StatusCallCollectionKey}}"
                          SelectedValue="{Binding CurrentCall.Status, Mode=TwoWay}" 
                          VerticalAlignment="Center" Width="120"/>

                <Label Grid.Row="7" Grid.Column="0" Content="Description:" HorizontalAlignment="Left" Margin="2" VerticalAlignment="Center"/>
                <TextBox Grid.Row="7" Grid.Column="1" HorizontalAlignment="Left" Height="NaN" Margin="2" 
                         Text="{Binding CurrentCall.Description, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                         VerticalAlignment="Center" Width="120"/>

                <Label Grid.Row="8" Grid.Column="0" Content="Ambulance type" HorizontalAlignment="Left" Margin="2" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="8" Grid.Column="1" HorizontalAlignment="Left" Height="NaN" Margin="2" 
                          ItemsSource="{Binding Source={StaticResource SystemTypeCollectionKey}}"
                          SelectedValue="{Binding CurrentCall.AmbulanceType, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                          VerticalAlignment="Center" Width="120"/>
            </Grid>
            <Button Content="{Binding ButtonText}" HorizontalAlignment="Center" Margin="0,45,0,45" Padding="5" Click="btnAddUpdate_Click"/>
        </StackPanel>
    </Grid>
</Window>
