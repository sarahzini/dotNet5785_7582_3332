<Window x:Class="PL.HistoricWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="HistoricWindow" Height="450" Width="800"
    DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <!--External Grid-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid/>
        <!--Internal, Upper Grid-->
        <Grid HorizontalAlignment="Stretch" Height="auto" Grid.Row="0" VerticalAlignment="Stretch" Width="auto" RenderTransformOrigin="0.546,0.421">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="1" Content="Filter:" HorizontalAlignment="Left" Margin="45,0,0,0" VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding Source={StaticResource StatusCallCollectionKey}}"
                      Grid.Column="1"
                      SelectedValue="{Binding Path=Ambulance, Mode=TwoWay}" Margin="148,0,425,0"
                      SelectionChanged="FilteredCall_SelectionChanged">

                <ComboBox.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop Color="#FFF0F0F0"/>
                        <GradientStop Color="#FF110606" Offset="1"/>
                    </LinearGradientBrush>
                </ComboBox.Background>
            </ComboBox>

            <Label Grid.Column="1" Content="Sort By:" HorizontalAlignment="Left" Margin="418,0,0,0" VerticalAlignment="Center"/>
            <ComboBox ItemsSource="{Binding Source={StaticResource ClosedCallFieldCollectionKey}}"
                      SelectionChanged="SortedCall_SelectionChanged"
                      SelectedValue="{Binding Path=Field, Mode=TwoWay}"
                      Grid.Column="1" HorizontalAlignment="Left" Margin="135,3,0,0" VerticalAlignment="Top" Width="265" Height="32"/>

        </Grid>
        <ListView Grid.Row="1" ItemsSource="{Binding Path=ClosedCalls}" SelectedItem="{Binding SelectedCall}"
                  Height="NaN" BorderBrush="#FFEB0404" Background="#FFEEEBEB" >
            <ListView.Foreground>
                <SolidColorBrush Color="#FFEB0404"/>
            </ListView.Foreground>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Call Id" Width="Auto" DisplayMemberBinding="{Binding CallId}" />
                    <GridViewColumn Header="Type of Call" Width="Auto" DisplayMemberBinding="{Binding TypeOfCall}" />
                    <GridViewColumn Header="Address" Width="Auto" DisplayMemberBinding="{Binding CallAddress}" />
                    <GridViewColumn Header="Begin Time" Width="Auto" DisplayMemberBinding="{Binding BeginTime}" />
                    <GridViewColumn Header="Begin Assignment Time" Width="Auto" DisplayMemberBinding="{Binding BeginActionTime}" />
                    <GridViewColumn Header="End Assignment Time" Width="Auto" DisplayMemberBinding="{Binding EndActionTime}" />
                    <GridViewColumn Header="Type of end" Width="Auto" DisplayMemberBinding="{Binding TypeOfEnd}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
