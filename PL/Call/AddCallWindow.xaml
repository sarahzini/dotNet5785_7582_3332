<Window x:Class="PL.Call.AddCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Call"
        mc:Ignorable="d"
        Title="Call Window" Height="323" Width="547"
        Icon="pack://application:,,,/PL;component/Images/Login.png">

    <Window.Resources>
        <Color x:Key="MDAColor">#FFDA291C</Color>
        <SolidColorBrush x:Key="MDABrush" Color="{StaticResource MDAColor}" />
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15" />
            <Setter Property="BorderBrush" Value="{StaticResource MDABrush}" />
            <Setter Property="BorderThickness" Value="3" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Padding" Value="15" />
        </Style>
        <Style x:Key="RedTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource MDABrush}" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style x:Key="RedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource MDABrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="BorderBrush" Value="{StaticResource MDABrush}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        CornerRadius="10" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Window.Resources>

    <Grid Margin="10,10,10,15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="173*"/>
        </Grid.ColumnDefinitions>
        <!-- Card Border -->

        <Border Style="{StaticResource CardStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="515" Height="275" Grid.ColumnSpan="2" Margin="10,0,0,0">
            <Grid Margin="0,0,0,-9">
                <Grid Margin="0,-1,0,-11">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>

                    <!-- MDA Logo -->
                    <Image Source="pack://application:,,,/PL;component/Images/Logo.png"
                       Grid.Row="0" Grid.ColumnSpan="2" Height="40" HorizontalAlignment="Left" Margin="165,-6,0,16" Width="117" />

                    <!-- Personal Details -->
                    <StackPanel Margin="10,39,10,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="441" Grid.RowSpan="2">
                        <TextBlock Text="Address:" Style="{StaticResource RedTextStyle}" />
                        <TextBox Text="{Binding CurrentCall.Address, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Margin="0,0,0,10"/>


                        <TextBlock Text="Max time to end the call: " Style="{StaticResource RedTextStyle}" />
                        <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Visibility="{Binding ButtonText}">
                            <DatePicker x:Name="MaxEndDatePicker" IsEnabled="true" HorizontalAlignment="Left" Height="NaN" Margin="2" 
                                SelectedDate="{Binding CurrentCall.MaxEndTime, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                                VerticalAlignment="Center" Width="120"/>
                            <TextBox x:Name="MaxEndTimeTextBox" IsEnabled="true" Height="NaN" 
                             Text="{Binding CurrentCall.MaxEndTime, Mode=TwoWay, NotifyOnValidationError=true, StringFormat=\{0:HH:mm:ss\}, ValidatesOnExceptions=true}" 
                             Width="335"/>
                        </StackPanel>

                        <TextBlock Text="Description:" Style="{StaticResource RedTextStyle}" />
                        <TextBox Text="{Binding CurrentCall.Description, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Margin="0,0,0,10" IsReadOnly="True"/>

                        <TextBlock Text="Ambulance type" Style="{StaticResource RedTextStyle}" />
                        <ComboBox ItemsSource="{Binding Source={StaticResource SystemTypeCollectionKey}}"
                          SelectedValue="{Binding CurrentCall.AmbulanceType, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                           Margin="0,0,0,10" />

                    </StackPanel>
                </Grid>
                <Button Content="Add"  Click="btnAdd_Click" Height="31" VerticalAlignment="Top" Margin="0,216,0,0" Style="{StaticResource RedButtonStyle}" Width="109"/>
            </Grid>
        </Border>
    </Grid>
</Window>
