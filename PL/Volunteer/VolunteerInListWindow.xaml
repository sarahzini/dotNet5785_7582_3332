<Window x:Name="window" x:Class="PL.Volunteer.VolunteerInListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="Volunteer In List" Height="640" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Icon="pack://application:,,,/PL;component/Images/Login.png"
        Loaded="Window_Loaded" Closed="Window_Closed">
    <!--External Grid-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Internal, Upper Grid-->
        <Grid HorizontalAlignment="Stretch" Height="auto" Grid.Row="0" VerticalAlignment="Stretch" Width="auto" RenderTransformOrigin="0.358,0.385">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Select type of actual call:" HorizontalAlignment="Left" Margin="145,0,0,0" VerticalAlignment="Center" Grid.Column="0"/>
            <ComboBox SelectedValue="{Binding Path=Ambulance, Mode=TwoWay}"
                      ItemsSource="{Binding Source={StaticResource SystemTypeCollectionKey}}" HorizontalAlignment="Left"
                       SelectionChanged="FilteredVolunteer_SelectionChanged" Width="202" Grid.ColumnSpan="2" Margin="304,0,0,0" />
        </Grid>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Path=VolunteerList}"
          SelectedItem="{Binding SelectedVolunteer, Mode=TwoWay}"
          AutoGenerateColumns="False"
          MouseDoubleClick="lsvUpdate_MouseDoubleClick"
          Height="NaN" BorderBrush="#FFEB0404" Background="#FFEEEBEB">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding VolunteerId}" Width="Auto"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="Auto"/>
                <DataGridTemplateColumn Header="Is Active" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsEnabled="False" IsChecked="{Binding Path=IsActive}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Completed Calls" Binding="{Binding CompletedCalls}" Width="Auto"/>
                <DataGridTextColumn Header="Canceled Calls" Binding="{Binding CanceledCalls}" Width="Auto"/>
                <DataGridTextColumn Header="Expired Calls" Binding="{Binding ExpiredCalls}" Width="Auto"/>
                <DataGridTextColumn Header="Type Of Call" Binding="{Binding TypeOfCall}" Width="Auto"/>
                <DataGridTextColumn Header="Current Call Id" Binding="{Binding ActualCallId}" Width="Auto"/>
                <DataGridTemplateColumn Header="" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Delete" Click="btnDeleteVolunteer_Click" Width="80" Height="30" Background="Red" Foreground="White"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>


        <!--Add Button-->
        <Button Content="Add" Click="btnAdd_Click" Grid.Row="2" HorizontalAlignment="Center" Height="50" Width="100"/>
    </Grid>
</Window>
