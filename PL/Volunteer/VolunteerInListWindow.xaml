<Window x:Name="window" x:Class="PL.Volunteer.VolunteerInListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="Volunteer In List" Height="640" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <!--External Grid-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="500*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Internal, Upper Grid-->
        <Grid HorizontalAlignment="Stretch" Height="auto" Grid.Row="0" VerticalAlignment="Stretch" Width="auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Select type of actual call:" HorizontalAlignment="Left" Margin="145,0,0,0" VerticalAlignment="Center" Grid.Column="0"/>
            <ComboBox ItemsSource="{Binding Source={StaticResource SystemTypeCollectionKey}}"
                      Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                      SelectedValue="{Binding Path=Ambulance, Mode=TwoWay}" SelectionChanged="FilteredVolunteer_SelectionChanged" />
        </Grid>

        <!--ListView for Volunteers-->
        <ListView Grid.Row="1" ItemsSource="{Binding Path=VolunteerList}" SelectedItem="{Binding SelectedVolunteer}" 
                  MouseDoubleClick="lsvUpdate_MouseDoubleClick"
                  Height="NaN" BorderBrush="#FFEB0404" Background="#FFEEEBEB">
            <ListView.Foreground>
                <SolidColorBrush Color="#FFEB0404"/>
            </ListView.Foreground>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="Auto" DisplayMemberBinding="{Binding VolunteerId}" />
                    <GridViewColumn Header="Name" Width="Auto" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Is Active" Width="Auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsEnabled="False" IsChecked="{Binding Path=IsActive}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Completed Calls" Width="Auto" DisplayMemberBinding="{Binding CompletedCalls}" />
                    <GridViewColumn Header="Canceled Calls" Width="Auto" DisplayMemberBinding="{Binding CanceledCalls}" />
                    <GridViewColumn Header="Expired Calls" Width="Auto" DisplayMemberBinding="{Binding ExpiredCalls}" />
                    <GridViewColumn Header="Type Of Call" Width="Auto" DisplayMemberBinding="{Binding TypeOfCall}" />
                    <GridViewColumn Header="Actual Call Id" Width="Auto" DisplayMemberBinding="{Binding ActualCallId}" />
                    <GridViewColumn Header="Actions" Width="Auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete" Click="btnDeleteVolunteer_Click" Tag="{Binding SelectedVolunteer}" Width="80" Height="30" Background="Red" Foreground="White"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!--Add Button-->
        <Button Content="Add" Click="btnAdd_Click" Grid.Row="2" HorizontalAlignment="Center" Height="50" Width="100"/>
    </Grid>
</Window>
