<Window x:Class="PL.Volunteer.UpdateVolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Volunteer" Height="455" Width="600"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Background="Transparent" 
        WindowStyle="None" 
        AllowsTransparency="True">

    <Window.Resources>
        <Color x:Key="MDAColor">#FFDA291C</Color>
        <SolidColorBrush x:Key="MDABrush" Color="{StaticResource MDAColor}" />
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15" />
            <Setter Property="BorderBrush" Value="{StaticResource MDABrush}" />
            <Setter Property="BorderThickness" Value="3" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Padding" Value="15" />
        </Style>
        <Style x:Key="RedTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource MDABrush}" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="173*"/>
        </Grid.ColumnDefinitions>
        <!-- Card Border -->
        <Border Style="{StaticResource CardStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="550" Height="418" Grid.ColumnSpan="2" Margin="25,0,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <!-- MDA Logo -->
                <Image Source="pack://application:,,,/PL;component/Images/Logo.png"
                       Grid.Row="0" Grid.ColumnSpan="2" Height="40" HorizontalAlignment="Left" Margin="198,-6,0,16" />

                <!-- Personal Details -->
                <StackPanel Grid.Row="1" Margin="7,10,10,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="333">
                    <TextBlock Text="Name:" Style="{StaticResource RedTextStyle}" />
                    <TextBox Text="{Binding CurrentVolunteer.Name, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Margin="0,0,0,10" />

                    <TextBlock Text="ID:" Style="{StaticResource RedTextStyle}" />
                    <TextBox Text="{Binding Path=CurrentVolunteer.VolunteerId, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Margin="0,0,0,10" IsReadOnly="True"/>


                    <TextBlock Text="Phone:" Style="{StaticResource RedTextStyle}" />
                    <TextBox Text="{Binding CurrentVolunteer.PhoneNumber, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Margin="0,0,0,10" />

                    <TextBlock Text="Email:" Style="{StaticResource RedTextStyle}" />
                    <TextBox Text="{Binding CurrentVolunteer.Email, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Margin="0,0,0,10" />

                    <TextBlock Text="Address:" Style="{StaticResource RedTextStyle}" />
                    <TextBox Text="{Binding CurrentVolunteer.VolunteerAddress, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Margin="0,0,0,10" />

                    <TextBlock Text="Max Distance:" Style="{StaticResource RedTextStyle}" />
                    <TextBox Text="{Binding CurrentVolunteer.MaxVolunteerDistance, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Margin="0,0,0,10" />

                    <!-- Password Field -->
                    <TextBlock Text="Password:" Style="{StaticResource RedTextStyle}" />
                    <TextBox Text="{Binding CurrentVolunteer.Password, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Margin="0,0,0,10" IsEnabled="False" />
                </StackPanel>


                <Button Content="Update" Click="btnUpdate_Click" HorizontalAlignment="Left" Margin="32,311,0,-2" Grid.Row="1" Grid.Column="1" BorderBrush="#FFDA291C" Foreground="#FFDA291C" OpacityMask="Black" Background="#FFDDDDDD" />
            </Grid>

        </Border>
    </Grid>
</Window>
