<Window x:Class="PL.Volunteer.UpdateVolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Volunteer" Height="586" Width="645"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Icon="pack://application:,,,/PL;component/Images/Login.png">


    <Window.Resources>
        <Color x:Key="MDAColor">#FFDA291C</Color>
        <SolidColorBrush x:Key="MDABrush" Color="{StaticResource MDAColor}" />
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15" />
            <Setter Property="BorderBrush" Value="{StaticResource MDABrush}" />
            <Setter Property="BorderThickness" Value="3" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Padding" Value="15" />
        </Style>
        <Style x:Key="RedTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource MDABrush}" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
        <Style x:Key="RedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource MDABrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="BorderBrush" Value="{StaticResource MDABrush}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                        CornerRadius="10" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Window.Resources>

    <Grid Margin="10,10,10,15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="27*"/>
            <ColumnDefinition Width="173*"/>
        </Grid.ColumnDefinitions>
        <!-- Card Border -->

        <Border Style="{StaticResource CardStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Width="596" Height="501" Grid.ColumnSpan="2" Margin="10,0,0,0">
            <Grid Margin="0">
                <Grid Margin="0,0,0,-8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>

                    <!-- MDA Logo -->
                    <Image Source="pack://application:,,,/PL;component/Images/Logo.png"
                       Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Margin="0,0,0,13" Width="148" />

                    <!-- Personal Details -->
                    <StackPanel Grid.Row="1" Margin="7,10,10,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="384">
                        <TextBlock Text="Name:" Style="{StaticResource RedTextStyle}" />
                        <TextBox Text="{Binding CurrentVolunteer.Name, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Margin="0,0,0,10" />

                        <TextBlock Text="ID:" Style="{StaticResource RedTextStyle}" />
                        <TextBox Text="{Binding Path=CurrentVolunteer.VolunteerId, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Margin="0,0,0,10" IsReadOnly="True"/>


                        <TextBlock Text="Phone:" Style="{StaticResource RedTextStyle}" />
                        <TextBox Text="{Binding CurrentVolunteer.PhoneNumber, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Margin="0,0,0,10" />

                        <TextBlock Text="Email:" Style="{StaticResource RedTextStyle}" />
                        <TextBox Text="{Binding CurrentVolunteer.Email, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Margin="0,0,0,10" />

                        <TextBlock Text="Address:" Style="{StaticResource RedTextStyle}" />
                        <TextBox Text="{Binding CurrentVolunteer.VolunteerAddress, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Margin="0,0,0,10" />

                        <TextBlock Text="Max Distance:" Style="{StaticResource RedTextStyle}" />
                        <TextBox Text="{Binding CurrentVolunteer.MaxVolunteerDistance, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Margin="0,0,0,10" />

                        <!-- Password Field -->
                        <TextBlock Text="Password:" Style="{StaticResource RedTextStyle}" />
                        <TextBox Text="{Binding CurrentVolunteer.Password, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  Margin="0,0,0,10" IsEnabled="False" />
                        <TextBlock Text="Is Active:" Style="{StaticResource RedTextStyle}" Width="631" />

                        <!-- IsActive Field -->
                        <CheckBox 
                         IsChecked="{Binding CurrentVolunteer.IsActive, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" />

                    </StackPanel>
                    <Button Content="Update" Click="btnUpdate_Click" HorizontalAlignment="Left" Margin="0,360,0,13" Grid.Row="1" Grid.Column="1" Style="{StaticResource RedButtonStyle}" Width="101" />
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
