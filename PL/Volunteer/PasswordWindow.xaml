<Window x:Class="PL.Volunteer.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="PasswordWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Please include it at least one uppercase letter and one number" Height="34" Margin="244,107,201,293" />
        <TextBlock HorizontalAlignment="Left" Margin="269,175,0,0" TextWrapping="Wrap" 
           Text="{Binding Password, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"  
           VerticalAlignment="Top" Width="86" Height="21"/>
        <Button Content="Set The Password" HorizontalAlignment="Left" Margin="360,176,0,0" VerticalAlignment="Top" Click="btnPassword_Click"/>

    </Grid>
</Window>
