<Window x:Class="PL.Volunteer.CurrentCall"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="CurrentCall" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        >
    <Grid Margin="0,0,-21,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        
            <!-- Added new row definition -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- CurrentCall properties -->
        <Label Grid.Row="1" Grid.Column="0" Content="Current Call AssignId:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding CurrentVolunteer.CurrentCall.AssignId, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
         VerticalAlignment="Center" Width="120" IsReadOnly="True"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Current Call Id:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding CurrentVolunteer.CurrentCall.CallId, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
         VerticalAlignment="Center" Width="120" IsReadOnly="True"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Type Of Call:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding CurrentVolunteer.CurrentCall.TypeOfCall, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
         VerticalAlignment="Center" Width="120" IsReadOnly="True"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Description:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding CurrentVolunteer.CurrentCall.Description, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
         VerticalAlignment="Center" Width="120" IsReadOnly="True"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Call Address:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding CurrentVolunteer.CurrentCall.CallAddress, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
         VerticalAlignment="Center" Width="120" IsReadOnly="True"/>

        <Label Grid.Row="6" Grid.Column="0" Content="Begin Time:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding CurrentVolunteer.CurrentCall.BeginTime, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
         VerticalAlignment="Center" Width="120" IsReadOnly="True"/>

        <Label Grid.Row="7" Grid.Column="0" Content="Max End Time:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="7" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding CurrentVolunteer.CurrentCall.MaxEndTime, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
         VerticalAlignment="Center" Width="120" IsReadOnly="True"/>

        <Label Grid.Row="8" Grid.Column="0" Content="Begin Action Time:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="8" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding CurrentVolunteer.CurrentCall.BeginActionTime, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
         VerticalAlignment="Center" Width="120" IsReadOnly="True"/>

        <Label Grid.Row="9" Grid.Column="0" Content="Volunteer Distance To Call:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="9" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding CurrentVolunteer.CurrentCall.VolunteerDistanceToCall, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
         VerticalAlignment="Center" Width="120" IsReadOnly="True"/>

        <Label Grid.Row="10" Grid.Column="0" Content="Status:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="10" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding CurrentVolunteer.CurrentCall.Status, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
         VerticalAlignment="Center" Width="120" IsReadOnly="True"/>

    </Grid>
</Window>
