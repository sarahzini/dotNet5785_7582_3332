<Window x:Class="PL.Volunteer.VolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="VolunteerWindow" Height="600" Width="312"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Icon="pack://application:,,,/PL;component/Images/Login.png">
    <Window.Resources>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Window.Resources>
    <!--External Grid-->
    <Grid Margin="0,0,-16,-329">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Added new row definition -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Id:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
                 Text="{Binding Path=CurrentVolunteer.VolunteerId, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}"
                 IsReadOnly="{Binding ButtonText, Converter={StaticResource ConvertUpdateToTrueKey}}"
                 VerticalAlignment="Center" Width="120"/>

        <Label Grid.Row="1" Grid.Column="0" Content="Name:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
                 Text="{Binding CurrentVolunteer.Name, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 VerticalAlignment="Center" Width="120"/>

        <Label Grid.Row="2" Grid.Column="0" Content="PhoneNumber:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
                 Text="{Binding CurrentVolunteer.PhoneNumber, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 VerticalAlignment="Center" Width="120"/>

        <Label Grid.Row="3" Grid.Column="0" Content="Email:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
                 Text="{Binding CurrentVolunteer.Email, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 VerticalAlignment="Center" Width="120"/>

        <Label Grid.Row="4" Grid.Column="0" Content="Max Distance To a Call:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
                 Text="{Binding CurrentVolunteer.MaxVolunteerDistance, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 VerticalAlignment="Center" Width="120"/>

        <Label Grid.Row="5" Grid.Column="0" Content="WhichDistance:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <TextBox Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
                 Text="AirDistance" 
                 VerticalAlignment="Center" Width="120" IsReadOnly="True"/>

        <Label Grid.Row="6" Grid.Column="0" Content="Job:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
                  ItemsSource="{Binding Source={StaticResource JobCollectionKey}}" 
                  SelectedValue="{Binding CurrentVolunteer.VolunteerJob, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                  VerticalAlignment="Center" Width="120"/>

        <Label Grid.Row="7" Grid.Column="0" Content="IsActive:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center"/>
        <CheckBox Grid.Row="7" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
                  IsChecked="{Binding CurrentVolunteer.IsActive, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                  VerticalAlignment="Center"/>

        <Button Content="{Binding ButtonText}" Grid.Row="8" HorizontalAlignment="Left" Width="63" Click="btnAddUpdate_Click" Grid.Column="1" Margin="23,3,0,30" Grid.RowSpan="3"/>

        <!-- CurrentCall properties -->
        <Label Grid.Row="9" Grid.Column="0" Content="Current Call AssignId:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center" Visibility="{Binding CurrentVolunteer.CurrentCall, Converter={StaticResource NullToVisibilityConverter}}"/>
        <TextBox Grid.Row="9" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding CurrentVolunteer.CurrentCall.AssignId, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
         VerticalAlignment="Center" Width="120" IsReadOnly="True" Visibility="{Binding CurrentVolunteer.CurrentCall, Converter={StaticResource NullToVisibilityConverter}}"/>

        <Label Grid.Row="10" Grid.Column="0" Content="Current Call Id:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center" Visibility="{Binding CurrentVolunteer.CurrentCall, Converter={StaticResource NullToVisibilityConverter}}"/>
        <TextBox Grid.Row="10" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding CurrentVolunteer.CurrentCall.CallId, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
         VerticalAlignment="Center" Width="120" IsReadOnly="True" Visibility="{Binding CurrentVolunteer.CurrentCall, Converter={StaticResource NullToVisibilityConverter}}"/>

        <Label Grid.Row="11" Grid.Column="0" Content="Type Of Call:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center" Visibility="{Binding CurrentVolunteer.CurrentCall, Converter={StaticResource NullToVisibilityConverter}}"/>
        <TextBox Grid.Row="11" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding CurrentVolunteer.CurrentCall.TypeOfCall, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
         VerticalAlignment="Center" Width="120" IsReadOnly="True" Visibility="{Binding CurrentVolunteer.CurrentCall, Converter={StaticResource NullToVisibilityConverter}}"/>

        <Label Grid.Row="12" Grid.Column="0" Content="Description:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center" Visibility="{Binding CurrentVolunteer.CurrentCall, Converter={StaticResource NullToVisibilityConverter}}"/>
        <TextBox Grid.Row="12" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding CurrentVolunteer.CurrentCall.Description, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
         VerticalAlignment="Center" Width="120" IsReadOnly="True" Visibility="{Binding CurrentVolunteer.CurrentCall, Converter={StaticResource NullToVisibilityConverter}}"/>

        <Label Grid.Row="13" Grid.Column="0" Content="Call Address:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center" Visibility="{Binding CurrentVolunteer.CurrentCall, Converter={StaticResource NullToVisibilityConverter}}"/>
        <TextBox Grid.Row="13" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding CurrentVolunteer.CurrentCall.CallAddress, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
         VerticalAlignment="Center" Width="120" IsReadOnly="True" Visibility="{Binding CurrentVolunteer.CurrentCall, Converter={StaticResource NullToVisibilityConverter}}"/>

        <Label Grid.Row="14" Grid.Column="0" Content="Begin Time:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center" Visibility="{Binding CurrentVolunteer.CurrentCall, Converter={StaticResource NullToVisibilityConverter}}"/>
        <TextBox Grid.Row="14" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding CurrentVolunteer.CurrentCall.BeginTime, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
         VerticalAlignment="Center" Width="120" IsReadOnly="True" Visibility="{Binding CurrentVolunteer.CurrentCall, Converter={StaticResource NullToVisibilityConverter}}"/>

        <Label Grid.Row="15" Grid.Column="0" Content="Max End Time:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center" Visibility="{Binding CurrentVolunteer.CurrentCall, Converter={StaticResource NullToVisibilityConverter}}"/>
        <TextBox Grid.Row="15" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding CurrentVolunteer.CurrentCall.MaxEndTime, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
         VerticalAlignment="Center" Width="120" IsReadOnly="True" Visibility="{Binding CurrentVolunteer.CurrentCall, Converter={StaticResource NullToVisibilityConverter}}"/>

        <Label Grid.Row="16" Grid.Column="0" Content="Begin Action Time:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center" Visibility="{Binding CurrentVolunteer.CurrentCall, Converter={StaticResource NullToVisibilityConverter}}"/>
        <TextBox Grid.Row="16" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding CurrentVolunteer.CurrentCall.BeginActionTime, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
         VerticalAlignment="Center" Width="120" IsReadOnly="True" Visibility="{Binding CurrentVolunteer.CurrentCall, Converter={StaticResource NullToVisibilityConverter}}"/>

        <Label Grid.Row="17" Grid.Column="0" Content="Volunteer Distance To Call:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center" Visibility="{Binding CurrentVolunteer.CurrentCall, Converter={StaticResource NullToVisibilityConverter}}"/>
        <TextBox Grid.Row="17" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding CurrentVolunteer.CurrentCall.VolunteerDistanceToCall, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
         VerticalAlignment="Center" Width="120" IsReadOnly="True" Visibility="{Binding CurrentVolunteer.CurrentCall, Converter={StaticResource NullToVisibilityConverter}}"/>

        <Label Grid.Row="18" Grid.Column="0" Content="Status:" HorizontalAlignment="Left" Margin="3" VerticalAlignment="Center" Visibility="{Binding CurrentVolunteer.CurrentCall, Converter={StaticResource NullToVisibilityConverter}}"/>
        <TextBox Grid.Row="18" Grid.Column="1" HorizontalAlignment="Left" Margin="3" 
         Text="{Binding CurrentVolunteer.CurrentCall.Status, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
         VerticalAlignment="Center" Width="120" IsReadOnly="True" Visibility="{Binding CurrentVolunteer.CurrentCall, Converter={StaticResource NullToVisibilityConverter}}"/>

    </Grid>
</Window>
