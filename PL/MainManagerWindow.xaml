<Window x:Class="PL.MainManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Manager Window" Height="450" Width="633"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}" 
        Icon="Images/Login.png"
        Background="#FFF5F5F5"
        Loaded="Window_Loaded" Closed="Window_Closed"
        >

    <Window.Resources>
        <Color x:Key="CustomColor">#FF832121</Color>
        <SolidColorBrush x:Key="CustomBrush" Color="{StaticResource CustomColor}" />
        <Style x:Key="RedBorderButtonStyle" TargetType="Button">
            <Setter Property="BorderBrush" Value="{StaticResource CustomBrush}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="{StaticResource CustomBrush}" />
        </Style>
        <Style x:Key="RedBorderTextBoxStyle" TargetType="TextBox">
            <Setter Property="BorderBrush" Value="{StaticResource CustomBrush}" />
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="{StaticResource CustomBrush}" />
        </Style>
    </Window.Resources>


    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="108*" />
            <RowDefinition Height="257*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="{StaticResource CustomBrush}" Height="50" Grid.Row="0" Margin="-9,0,-9,0">
            <TextBlock Text="Manager System - MDA" FontSize="20" FontWeight="Bold" Foreground="White"
                       VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Border>

        <!-- Content Area -->
        <Grid Grid.Row="1" Grid.RowSpan="2" >
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Section: Time Management -->
            <StackPanel Grid.Column="0" VerticalAlignment="Top">
                <Label Content="{Binding CurrentTime}" Height="34" Width="135" Foreground="{StaticResource CustomBrush}" />
                <Button Content="Add a Minute" Click="btnAddOneMinute_Click" Width="140" Style="{StaticResource RedBorderButtonStyle}" />
                <Button Content="Add an Hour" Click="btnAddOneHour_Click" Width="140" Style="{StaticResource RedBorderButtonStyle}" />
                <Button Content="Add a Day" Click="btnAddOneDay_Click" Width="140" Style="{StaticResource RedBorderButtonStyle}" />
                <Button Content="Add a Month" Click="btnAddOneMonth_Click" Width="140" Style="{StaticResource RedBorderButtonStyle}" />
                <Button Content="Add a Year" Click="btnAddOneYear_Click" Width="140" Style="{StaticResource RedBorderButtonStyle}" />
            </StackPanel>

            <!-- Center Section: Calls and Volunteers -->
            <StackPanel Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" Height="168" Width="262" Margin="0,72,0,0" Grid.RowSpan="2">
                <TextBlock Text="Managing Calls and Volunteers" FontSize="18" FontWeight="Bold" Foreground="{StaticResource CustomBrush}" Margin="0,0,0,20" Height="28" />
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Height="24" Margin="0,0,10,0" Source="Images/Phone.png" />
                    <Button Grid.Column="1" Content="Calls" Height="40" FontSize="20" Click="btnCalls_Click" Background="{StaticResource CustomBrush}" Foreground="White" Margin="10,0,10,0" />
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="0" Height="24" Margin="0,0,10,0" Source="Images/V.png" />
                    <Button Grid.Column="1" Content="Volunteers" Height="40" FontSize="20" Click="btnVolunteers_Click" Background="{StaticResource CustomBrush}" Foreground="White" Margin="10,0,10,0" />
                </Grid>
            </StackPanel>

            <StackPanel Grid.Column="2" VerticalAlignment="Top" Height="Auto" Margin="0,37,0,0">
                <!-- Group 1: Risk Range Button and TextBox -->
                <StackPanel>
                    <Button Content="Risk Range" Click="btnSetRR_Click" Width="140" Style="{StaticResource RedBorderButtonStyle}" />
                    <TextBox Text="{Binding RiskRange, UpdateSourceTrigger=PropertyChanged}" Width="140" Height="25" TextWrapping="Wrap" Style="{StaticResource RedBorderTextBoxStyle}" />
                </StackPanel>

                <!-- Spacer -->
                <StackPanel Height="20" />

                <!-- Group 2: Initialization and Reset Buttons -->
                <StackPanel>
                    <Button Content="Initialization"  IsEnabled="{Binding isNotRun}" Click="btnInitialization_Click" Width="140" Style="{StaticResource RedBorderButtonStyle}" />
                    <Button Content="Reset"  IsEnabled="{Binding isNotRun}" Click="btnReset_Click" Width="140" Style="{StaticResource RedBorderButtonStyle}" Height="22" />
                </StackPanel>
            </StackPanel>
            <Button Grid.Column="2" Content="{Binding ButtonText}" HorizontalAlignment="Left" Margin="14,61,0,0" Grid.Row="1" VerticalAlignment="Top" Height="22" Width="118" Click="btnSimulator_Click"/>
            <TextBlock Grid.Column="2" HorizontalAlignment="Center" Margin="0,194,0,0" TextWrapping="Wrap" Text="Please enter the interval per minute " VerticalAlignment="Top" Width="129" Grid.RowSpan="2"/>
            <TextBox Text="{Binding Interval}" IsEnabled="{Binding isNotRun}" Grid.Column="2" HorizontalAlignment="Center" Margin="0,35,0,0" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" />
            <Button Content="Open" Click="btnOpenCalls_Click" HorizontalAlignment="Left" Margin="66,172,0,0" VerticalAlignment="Top" Height="21" Width="68"/>
            <Button Content="Open In Risk" Click="btnOpenCallsInRisk_Click" HorizontalAlignment="Left" Margin="64,194,0,0" VerticalAlignment="Top" Height="25" Width="85" Grid.RowSpan="2"/>
            <Button Content="In Action" Click="btnInActionCalls_Click" HorizontalAlignment="Left" Margin="61,1,0,0" Grid.Row="1" VerticalAlignment="Top" Width="85"/>
            <Button Content="In Action in Risk" Click="btnInActionCallsInRisk_Click" Margin="55,20,296,100" Grid.Row="1" Grid.ColumnSpan="2"/>
            <Button Content="Closed" Click="btnClosedCalls_Click" HorizontalAlignment="Left" Margin="68,45,0,0" Grid.Row="1" VerticalAlignment="Top" Height="26" Width="58"/>
            <Button Content="Expired" Click="btnExpiredCalls_Click" Margin="63,71,16,49" Grid.Row="1"/>
            <Label Content="{Binding  CallCounts[0]}" HorizontalAlignment="Left" Margin="7,173,0,0" VerticalAlignment="Top" Height="21" Width="54"/>
            <Label Content="{Binding  CallCounts[2]}" HorizontalAlignment="Left" Margin="1,195,0,144" Width="60" Grid.RowSpan="2"/>
            <Label Content="{Binding  CallCounts[5]}" HorizontalAlignment="Left" Margin="1,24,0,0" Grid.Row="1" VerticalAlignment="Top" Height="18" Width="44" RenderTransformOrigin="0.5,0.5">
                <Label.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="1.195"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Label.RenderTransform>
            </Label>
            <Label Content="{Binding  CallCounts[1]}" HorizontalAlignment="Left" Margin="-9,216,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.642,0.135" Grid.RowSpan="2" Height="26" Width="69"/>
            <Label Content="{Binding  CallCounts[3]}" HorizontalAlignment="Left" Margin="0,47,0,0" Grid.Row="1" VerticalAlignment="Top" Height="18" Width="45"/>
            <Label Content="{Binding  CallCounts[4]}" HorizontalAlignment="Left" Margin="-4,67,0,0" Grid.Row="1" VerticalAlignment="Top" Height="24" Width="57"/>

        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="{StaticResource CustomBrush}" Margin="-9,213,-9,0">
            <TextBlock Text="MDA Management System © 2025" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontSize="12" />
        </Border>
    </Grid>
</Window>
