<Window x:Class="PL.Main.MainVolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="MainVolunteerWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Content="Update my Detail" HorizontalAlignment="Left" Width="146" Click="btnUpdate_Click" Margin="320,132,0,269" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button Content="Call Historic" HorizontalAlignment="Left" Margin="320,239,0,0" VerticalAlignment="Top" Click="btnHistoric_Click" Height="33" Width="146" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Button Content="{Binding ButtonText}" HorizontalAlignment="Left" Margin="316,188,0,0" VerticalAlignment="Top" Width="150" Click="btnAssignment_Click" Height="29" Grid.Column="1" Grid.ColumnSpan="2"/>
        <Border BorderBrush="Black" BorderThickness="1" Grid.Column="1" HorizontalAlignment="Left" Height="0" Margin="320,127,0,0" VerticalAlignment="Top" Width="0"/>
    </Grid>
</Window>
